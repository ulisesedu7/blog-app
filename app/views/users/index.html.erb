<main>
  <section>
    <% if @users.empty? %>
      <h2>There are no users in the database</h2>
    <% else %>
      <h2>Take a look at all of the users and their number of posts</h2>

      <% @users.each do |user| %>
        <article class="users-section">
          <div class="users-section-card">
            <%= link_to user_path(user.id) do %>
              <img src="<%= user.photo %>" alt="The representation of the user">
              <h4><%= user.name %></h4>
              <p>Number of Posts: <%= user.posts_counter %></p>
            <% end %>
          </div>
        </article>
      <% end %>

    <% end %>
  </section>
</main>
