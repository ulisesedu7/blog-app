<main>
  <section class="users-section">
    <article class="users-info">
      <div class="users-section-card">
        <img src="<%= @user.photo %>" alt="Where the user face would be">
        <h4><%= @user.name %></h4>
        <p>Number of Posts: <%= @user.posts_counter %></p>
      </div>
    </article>

    <article class="users-bio">
      <p><%= @user.bio %></p>
    </article>

    <article class="users-posts">
      <% if @posts.empty? %>
        <p>There are no posts for this user</p>
      <% else %>
        <h2>Take a look at all of the users and their number of posts</h2>

        <% @posts.each do |post| %>
          <div class="post-card">
            <h3>Post #<%= post.id %>: <%= post.title %></h2>
            <p class="post-card-d"><%= post.text %></p>
            <p class="post-card-a">
              Comments: <%= post.comment_counter %>, Likes: <%= post.like_counter %>
            </p>
          </div>
        <% end %>
      <% end %>
    </article>

    <%= link_to posts_path(@user.id) do %>
      <button>See all posts</button>
    <% end %>
  </section>
</main>
